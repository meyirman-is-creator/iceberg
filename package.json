{
  "name": "iceberg",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/meyirman-is-creator/iceberg.git",
  "author": "meirman_is_creator <sarsenbaymeyirman@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "presubmit": "yarn lint:fix && yarn prettier:fix",
    "db:format": "yarn prisma format",
    "db:studio": "yarn prisma studio",
    "db:generate": "yarn prisma generate",
    "db:status": "yarn prisma migrate status",
    "db:migration": "yarn prisma migrate dev --create-only",
    "db:deploy": "yarn prisma migrate deploy"
  },
  "dependencies": {
    "@prisma/client": "^6.4.1",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.13.9",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-graphql": "^0.12.0",
    "graphql": "^16.10.0",
    "jsonwebtoken": "^9.0.2",
    "nodemon": "^3.1.9",
    "prisma": "^6.4.1",
    "reflect-metadata": "^0.2.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.2"
  }
}
